var _self = argument[0];
var skeleton = argument[1];
var time = argument[2];
var loop = argument[3];
var alpha = argument[4];

var i, n = ds_map_find_value(_self, 'timelineCount');
var duration = ds_map_find_value(_self, 'duration');
var timelines = ds_map_find_value(_self, 'timelines');

if (loop && duration) {
  time = time mod duration;
}

for (i =0; i < n; ++i) {
    var timeline = ds_list_find_value(timelines, i);
    Timeline_apply(timeline, skeleton, time, alpha);
}

